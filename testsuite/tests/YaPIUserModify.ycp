{
    // testedfiles: Users.pm UsersCache.pm USERS.pm

    include "testsuite.ycp";

    import "YaPI::USERS";
    import "Mode";

    map R = $[
	"passwd": $[
	    "local": $[
		"users": $[
		    "hh": $[
			"uid"		: "hh",
			"uidnumber"	: 500,
			"type"		: "local",
			"userpassword"	: "x",
			"sn"		: "HH",
			"grouplist"	: $[
			    "users"	: 1
			],
		    ],
		    "by_uidnumber": $[
			500		:$["hh":1],
		    ],
		    "last_uid": 500,
		    "homes":	$[
			"/home/hh":	1,
		    ],
		    "usernames": $[
			"hh":		1,
		    ],
		    "uids": $[
			500:		1,
		    ]
		],
		"shadow": $[
		],
		"groups": $[
		    "users": $[
			"cn"	:	"users",
			"gidnumber":	100,
			"type"	:	"local",
			"userlist"	: $[
			    "hh":	1
			],
		    ],
		    "by_gidnumber": $[
			100		:$["users":1],
		    ],
		    "gids": $[
			100:		1,
		    ],
		    "groupnames": $[
			"users":	1,
		    ]
		],
	    ],
	    "system": $[
		"users": $[
		    "root":	$[
			"uid"		: "root",
			"uidnumber"	: 0,
			"type"		: "system"
		    ],
		    "by_uidnumber": $[
			0		:$["root":1],
		    ],
		    "last_uid": 0,
		    "homes":	$[
		    ],
		    "usernames": $[
			"root"		: 1,
		    ],
		    "uids": $[
			0		: 1
		    ],
		],
		"shadow": $[
		],
		"groups": $[
		    "root": $[
			"cn":	"root",
			"gidnumber":	0,
			"type"	:	"system"
		    ],
		    "by_gidnumber": $[
			0		:$["root": 1]
		    ],
		    "gids": $[
			0	: 1
		    ],
		    "groupnames": $[
			"root"	: 1
		    ]
		],
	    ],
	],
	"etc" : $[
	    "fstab": [],
	    "cryptotab": [],
	    "default": $[
		"useradd": $[
		    "home":	"/tmp/local/home",
		    "groups":	"audio,video",
		    "group":	100
		]
	    ],
	],
	"target": $[
	    "stat"	: $[],
	    "size"	: -1,
	    "tmpdir"	: "/tmp/YaST"
	],
	"product": $[
		"features": $[
		    "USE_DESKTOP_SCHEDULER"	: "no",
		    "IO_SCHEDULER"		: "",
		    "ENABLE_AUTOLOGIN"		: "false",
		    "UI_MODE"			: "simple",
		    "EVMS_CONFIG"		: "no",
		    "INCOMPLETE_TRANSLATION_TRESHOLD"	: "99",
		]
	],
    ];
    map W = $[];
    map E = $[
	"passwd" : $[
	    "init"	: true
	],
	"target": $[
	    "mkdir"	: true,
	    "bash_output"	: $[]
	]
    ];

    DUMP ("==========================================================");

    Mode::SetTest ("test");

    map<string,any> config_map  = $[
	"uid"		: "jj",
    ];
    map<string,any> data_map    = $[
	"sn"		: "HH",
    ];
    E ["target", "bash_output", "stdout"] = "jj";

    DUMP ("============ edit non-existing user 'jj': =====================");
    TEST (``(YaPI::USERS::UserModify (config_map, data_map)), [R,W,E], 0);
    DUMP ("============ edit done ========================================");

    config_map    = $[
	"uid"           : "hh",
    ];
    E ["target", "bash_output", "stdout"] = "hh";

    DUMP ("============ edit existing user 'hh' (not really changed): ====");
    TEST (``(YaPI::USERS::UserModify (config_map, data_map)), [R,W,E], 0);
    DUMP ("============ edit done ========================================");

    data_map["sn"]	= "HHH";

    DUMP ("============ edit existing user 'hh': (changed sn) ============");
    TEST (``(YaPI::USERS::UserModify (config_map, data_map)), [R,W,E], 0);
    DUMP ("============ edit done ========================================");

    data_map["uid"]	= "hhh";
    E ["target", "bash_output", "stdout"] = "hhh";

    DUMP ("============ edit existing user 'hh': (changed uid) ============");
    TEST (``(YaPI::USERS::UserModify (config_map, data_map)), [R,W,E], 0);
    DUMP ("============ edit done ========================================");

    data_map["uid"]	= "root";
    E ["target", "bash_output", "stdout"] = "root";

    DUMP ("============ edit existing user 'hh': (uid conflict) ==========");
    TEST (``(YaPI::USERS::UserModify (config_map, data_map)), [R,W,E], 0);
    DUMP ("============ edit done ========================================");

}
