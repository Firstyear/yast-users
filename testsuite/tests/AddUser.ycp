{
    // testedfiles: Users.pm UsersLDAP.pm UsersCache.pm

    include "testsuite.ycp";
    import "Users";
    import "UsersCache";
    import "UsersLDAP";
    import "Mode";
    import "Progress";
    import "Report";

    map READ = $[
	"passwd": $[
	    "local": $[
		"users": $[
		    500: $[
			"uid":	"hh"
		    ],
		    "by_name": $[
			"hh":	500,
		    ],
		    "last_uid": 500,
		    "homes":	$[
			"/home/hh":	1,
		    ],
		    "usernames": $[
			"hh":		1,
		    ],
		    "uids": $[
			500:		1,
		    ]
		],
		"shadow": $[
		],
		"groups": $[
		    100: $[
			"cn"	:	"users",
			"gidnumber":	100,
			"type"	:	"local"
		    ],
		    "by_name": $[
			"users":	100,
		    ],
		    "gids": $[
			100:		1,
		    ],
		    "groupnames": $[
			"users":	1,
		    ]
		],
	    ],
	    "system": $[
		"users": $[
		    0:	$[
			"uid"		: "root",
			"uidnumber"	: 0
		    ],
		    "by_name": $[
			"root"		: 0
		    ],
		    "last_uid": 0,
		    "homes":	$[
		    ],
		    "usernames": $[
			"root"		: 1,
		    ],
		    "uids": $[
			0		: 1
		    ],
		],
		"shadow": $[
		],
		"groups": $[
		    0: $[
			"cn":	"root",
			"gidnumber":	0,
			"type"	:	"system"
		    ],
		    "by_name": $[
			"root"	: 0
		    ],
		    "gids": $[
			0	: 1
		    ],
		    "groupnames": $[
			"root"	: 1
		    ]
		],
	    ],
	],
	"etc" : $[
	    "fstab": [],
	    "cryptotab": [],
	    "default": $[
		"useradd": $[
		    "home":	"/home",
		    "groups":	"audio,video",
		    "group":	100
		]
	    ],
	],
	"target": $[
	    "stat"	: $[],
	    "size"	: 0,
	    "tmpdir"	: "/tmp/YaST"
	],
	"product": $[
		"features": $[
		    "USE_DESKTOP_SCHEDULER"	: "no",
		    "IO_SCHEDULER"		: "",
		    "ENABLE_AUTOLOGIN"		: "false",
		    "EVMS_CONFIG"		: "no"
		]
	],
    ];
    map WRITE = $[];
    map EXEC = $[
	"passwd" : $[
	    "init"	: true
	],
	"target" : $[
	    "bash"		: 0,
	    "bash_output"	: $[]
	],
    ];

    DUMP ("==========================================================");

    Mode::test = true;

    TEST (``(Users::Read ()), [READ, WRITE, EXEC], 0);

    DUMP (sformat ("---- current user:\n %1", Users::GetCurrentUser ()));

    TEST (``(Users::AddUser ($[])), [READ, WRITE, EXEC], 0);

    DUMP (sformat ("---- current user (empty add):\n %1", Users::GetCurrentUser ()));
    map<string,any> user = $[
	"uidnumber"	: 501,
	"uid"		:"aaa",
	"gidnumber"	: 100,
	"groupname"	: "users",
	"grouplist"	: $[ "audio" : 1 ],
	"homedirectory"	:"/local/home/aaa",
	"userpassword"	:"qqqqq",
	"type"		:"local",
    ];

    TEST (``(Users::AddUser (user)), [READ, WRITE, EXEC], 0);

    DUMP (sformat ("---- current user (after rich add):\n %1", Users::GetCurrentUser ()));

    EXEC ["target", "bash_output", "stdout"] = "aaa";

    string error = (string) TEST(``(Users::CheckUser ($[])), [READ,WRITE,EXEC], 0);

    Users::SelectGroup (100);
    DUMP (sformat ("---- current group (before user commit):\n %1",
	Users::GetCurrentGroup ()));

    DUMP (sformat ("---- check user after add:\n %1", error));

    DUMP ("---- commit user:");

    TEST (``(Users::CommitUser ()), [READ, WRITE, EXEC], 0);

    Users::SelectGroup (100);
    DUMP (sformat ("---- current group (afer user commit):\n %1",
	Users::GetCurrentGroup ()));

    DUMP ("=================== no password ==========================");

    TEST (``(Users::AddUser ($[])), [READ, WRITE, EXEC], 0);
    TEST (``(Users::AddUser ($[ "uid": "hhh"])), [READ, WRITE, EXEC], 0);

    DUMP (sformat ("---- current user (minimal add, used default values):\n %1", Users::GetCurrentUser ()));

    EXEC ["target", "bash_output", "stdout"] = "hhh";

    error = (string) TEST(``(Users::CheckUser ($[])), [READ,WRITE,EXEC], 0);

    DUMP (sformat ("---- check user after add:\n %1", error));

    DUMP ("==================== uid conflict ========================");

    TEST (``(Users::AddUser ($[])), [READ, WRITE, EXEC], 0);
    TEST (``(Users::AddUser ($[ "uid": "root", "userpassword": "qqqqq"])),
	[READ, WRITE, EXEC], 0);

    DUMP (sformat ("---- current user (just added):\n %1", Users::GetCurrentUser ()));
    EXEC ["target", "bash_output", "stdout"] = "root";

    error = (string) TEST(``(Users::CheckUser ($[])), [READ,WRITE,EXEC], 0);

    DUMP (sformat ("---- check user after add:\n %1", error));

    DUMP ("==================== uidnumber problems ===================");

    TEST (``(Users::AddUser ($[])), [READ, WRITE, EXEC], 0);
    TEST (``(Users::AddUser ($[
	"uid"		: "rrr",
	"uidnumber"	: 5,
	"type"		: "local",
	"userpassword"	: "qqqqq"
	])),
	[READ, WRITE, EXEC], 0);

    DUMP (sformat ("---- current user (just added):\n %1", Users::GetCurrentUser ()));
    EXEC ["target", "bash_output", "stdout"] = "rrr";

    error = (string) TEST(``(Users::CheckUser ($[])), [READ,WRITE,EXEC], 0);

    DUMP (sformat ("---- check user after add:\n %1", error));

    DUMP ("==================== uid content problems ===================");

    TEST (``(UsersLDAP::SetUserBase ("dc=suse,dc=cz")), [], 0);
    TEST (``(Users::AddUser ($[])), [READ, WRITE, EXEC], 0);
    TEST (``(Users::AddUser ($[
	"uid"		: "iii$",
	"type"		: "local",
	"userpassword"	: "qqqqq"
	])),
	[READ, WRITE, EXEC], 0);

    DUMP (sformat ("---- current user (just added):\n %1", Users::GetCurrentUser ()));
    EXEC ["target", "bash_output", "stdout"] = "";

    error = (string) TEST(``(Users::CheckUser ($[])), [READ,WRITE,EXEC], 0);

    DUMP (sformat ("---- check user after add:\n %1", error));

    DUMP ("==================== uid for LDAP may contain '$' ==============");

    TEST (``(Users::AddUser ($[])), [READ, WRITE, EXEC], 0);
    TEST (``(Users::AddUser ($[
	"uid"		: "iii$",
	"type"		: "ldap",
	"homedirectory"	: "/home/ldap/iii",
	"userpassword"	: "qqqqq"
	])),
	[READ, WRITE, EXEC], 0);

    DUMP (sformat ("---- current user (just added):\n %1", Users::GetCurrentUser ()));
    EXEC ["target", "bash_output", "stdout"] = "iii";

    error = (string) TEST(``(Users::CheckUser ($[])), [READ,WRITE,EXEC], 0);

    DUMP (sformat ("---- check user after add:\n %1", error));

    DUMP ("==========================================================");
}
