{

    include "testsuite.ycp";
    import "Users";
    import "Mode";
    import "Directory";
    import "Progress";

    map READ = $[
	"passwd": $[
	    "local": $[
		"users": $[
		    500: $[
			"username":	"hh"
		    ],
		    "by_name": $[
			"hh":	500,
		    ],
		    "last_uid": 500,
		    "homes":	$[
			"/home/hh":	1,
		    ],
		    "usernames": $[
			"hh":		1,
		    ],
		    "uids": $[
			500:		1,
		    ]
		],
		"shadow": $[
		],
		"groups": $[
		    100: $[
			"groupname":	"users",
			"gidNumber":	100,
			"type"	:	"local"
		    ],
		    "by_name": $[
			"users":	100,
		    ],
		    "gids": $[
			100:		1,
		    ],
		    "groupnames": $[
			"users":	1,
		    ]
		],
	    ],
	    "system": $[
		"users": $[
		    "by_name": $[
		    ],
		    "last_uid": 0,
		    "homes":	$[],
		    "usernames": $[],
		    "uids": $[],
		],
		"shadow": $[
		],
		"groups": $[
		    "by_name": $[
		    ],
		    "gids": $[ ],
		    "groupnames": $[ ]
		],
	    ],
	],
	"etc" : $[
	    "fstab": [],
	    "cryptotab": [],
	    "default": $[
		"useradd": $[
		    "home":	"/home",
		    "groups":	"audio,video",
		    "group":	100
		]
	    ],
	],
    ];
    map WRITE = $[];
    map EXEC = $[
	"target" : $[
	    "bash" :	0,
	    "bash_output" : $[
		"stdout": "$1$T8$yEI1SH.1b0jqeqDq6bHha1"
	    ],
	],
    ];

    DUMP ("==========================================================");

    Mode::test = true;

    TEST (``(Users::Read ()), [READ, WRITE, EXEC], 0);

    DUMP (sformat ("---- current user:\n %1", Users::GetCurrentUser ()));

    TEST (``(Users::AddUser ($[])), [READ, WRITE, EXEC], 0);

    DUMP (sformat ("---- current user (empty add):\n %1", Users::GetCurrentUser ()));
    map<string,any> user = $[
	"cn":"",
	"gidNumber":100,
	"groupname": "users",
	"grouplist": $[ "audio" : 1 ],
	"homeDirectory":"/local/home/aaa",
	"userPassword":"$1$T8$yEI1SH.1b0jqeqDq6bHha1",
	"uidNumber":501,
	"username":"aaa",
	"type":"local",
    ];

    TEST (``(Users::AddUser (user)), [READ, WRITE, EXEC], 0);

    DUMP (sformat ("---- current user (after rich add):\n %1", Users::GetCurrentUser ()));

    TEST (``(Users::CommitUser ()), [READ, WRITE, EXEC], 0);

    DUMP ("==========================================================");

    TEST (``(Users::AddUser ($[])), [READ, WRITE, EXEC], 0);
    TEST (``(Users::AddUser ($[ "username": "hhh"])), [READ, WRITE, EXEC], 0);

    DUMP (sformat ("---- current user (minimal add, used default values):\n %1", Users::GetCurrentUser ()));

    DUMP ("==========================================================");
}
