{

    include "testsuite.ycp";

    import "Users";

    map READ = $[
	"target" : $[
	    "string"	:
"/bin/ash
/bin/bash
/bin/bash1
/bin/csh
/bin/false
/bin/ksh
/bin/sh",
	    "stat"	: $[ 1: 1], // means 'file exists'
	]
    ];

    map EXECUTE = $[
	"target" : $[
	    "size" : 0
	]
    ];

    TEST (``(Users::ReadAllShells ()), [READ, $[], EXECUTE], 0);
    DUMP ("==========================================================");
    DUMP (sformat ("shells: %1", Users::AllShells()));
}
