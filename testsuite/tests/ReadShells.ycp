{
    import "Testsuite";

    import "Users";

    map READ = $[
	"target" : $[
	    "string"	:
"/bin/ash
/bin/bash
/bin/bash1
/bin/csh
/bin/false
/bin/ksh
/bin/sh",
	    "stat"	: $[ 1: 1], // means 'file exists'
	    "tmpdir"	: "/tmp/YaST",
	]
    ];

    Testsuite::Test (``(Users::ReadAllShells ()), [READ, $[], $[]], 0);
    Testsuite::Dump ("==========================================================");
    Testsuite::Dump (sformat ("shells: %1", Users::AllShells()));
}
