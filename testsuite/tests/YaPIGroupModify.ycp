	"gidnumber"	: 17
    ];
    E ["target", "bash_output", "stdout"] = "audio";

    DUMP ("============ edit group 'users' (gid conflict): ===============");
    TEST (``(YaPI::USERS::GroupModify (config_map, data_map)), [R,W,E], 0);
